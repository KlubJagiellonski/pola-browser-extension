{
    "manifest_version": 2,

    "name": "Pola",

    "version": "0.1",

    "description": "Pola",

    "homepage_url": "https://www.pola-app.pl/",

    "author": "Klub Jagiellonski",

    "icons": {
        "256": "icons/pola-256.png",
        "128": "icons/pola-128.png",
        "64": "icons/pola-64.png",
        "40": "icons/pola-40.png",
        "32": "icons/pola-32.png",
        "20": "icons/pola-20.png"
    },

    "permissions": [
        "https://www.pola-app.pl/*",
        "https://*/*",
        "http://*/*",
        "activeTab",
        "storage"
    ],

    "browser_action": {
        "default_icon": {
            "256": "icons/pola-256.png",
            "128": "icons/pola-128.png",
            "64": "icons/pola-64.png",
            "40": "icons/pola-40.png",
            "32": "icons/pola-32.png",
            "20": "icons/pola-20.png"
        },
        "default_title": "Pola",
        "default_popup": "popup/pola.html"
    },

    "-ms-preload": {
        "backgroundScript": "backgroundScriptsAPIBridge.js",
        "contentScript": "contentScriptsAPIBridge.js"
    }
}